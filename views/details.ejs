<%- include('layout/_header') %>


<div class="post">
    <div class="post-header">
        <h3> <%= post.title %> </h3>
        <p>
            Опубликовал: <a href="/author/<%= post.user.id %>" class="label label-info"> <%= post.user.name %> </a>
            <% if( user && user.id===post.user.id || user && user.admin ){ %>
            <span class="tools">
                    <a href="/post/<%= post.id %>/edit"><i class="glyphicon glyphicon-pencil"></i></a>
                    <a href="#"><i class="glyphicon glyphicon-remove"></i></a>
            </span>
            <% } %>
            <p><%= post.updatedAt.getDate()+' '+(post.updatedAt.getMonth()-0+1)+' '+post.updatedAt.getFullYear() %></p>
        </p>
    </div>
    <div class="post-body">
        <div class="preview">
            <p> <%= post.preview %> </p>
        </div>
        <hr>
        <div class="post-text">
            <%= post.text %>
        </div>
    </div>
</div>

<%- include('layout/_footer') %>
