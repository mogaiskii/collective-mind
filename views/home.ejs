<%- include('layout/_header') %>



<% for( let post of posts ){ %>
<div class="post">
    <div class="post-header">
        <h3> <%= post.title %> </h3>
        <p>Опубликовал: <a href="/author/<%= post.user.id %>" class="label label-info"> <%= post.user.name %> </a></p>
        <p><%= post.updatedAt.toLocaleDateString({year:"numeric",month:"numeric",day:"numeric"}) %></p>
    </div>
    <div class="post-body">
        <div class="preview">
            <p> <%= post.preview %> </p>
        </div>
    </div>
    <div class="post-footer">
        <a href="/post/<%= post.id %>" class="btn btn-default">Подробнее</a>
    </div>
</div>
<% } %>



<nav class="text-center">
    <ul class="pagination">
        <% if(page.current - 1 > 0){ %>
        <li><a href="/page/<%= page.current-1 %>">Previous</a></li>
        <li><a href="/page/<%= page.current-1 %>"> <%= page.current-1 %> </a></li>
        <% } %>
        <li class="active"><a href="#"> <%= page.current %> </a></li>
        <% if(page.current != page.last){ %>
        <li><a href="/page/<%= page.current-1+2 %>"><%= page.current-0+1 %></a></li>
        <li><a href="/page/<%= page.current-1+2 %>">Next</a></li>
        <% } %>
    </ul>
</nav>


<%- include('layout/_footer') %>
